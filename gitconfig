[user]
	name = Marcos Curvello
	email = mrcurvello@gmail.com
[core]
	editor = vim
[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
[delta]
    features = side-by-side line-numbers decorations hyperlinks
    syntax-theme = Dracula
    plus-style = syntax "#003800"
    minus-style = syntax "#3f0001"
    hyperlinks-style = none
[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow
    file-decoration-style = none
    hunk-header-decoration-style = cyan box ul
[delta "line-numbers"]
    line-numbers-left-style = cyan
    line-numbers-right-style = cyan
    line-numbers-zero-style = dimgrey
    line-numbers-minus-style = 124
    line-numbers-plus-style = 28
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[interactive]
    diffFilter = delta --color-only
[push]
	default = current
[fetch]
    prune = true
[init]
	defaultBranch = main
[alias]
    undo = reset --soft HEAD^
    fsck = fsck --unreachable | grep commit | cut -d" " -f3 | xargs git log --merges --no-walk
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative





